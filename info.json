{
  "id": "plugin.com.pot-app.gemini",
  "plugin_type": "translate",
  "icon": "gemini.svg",
  "display": "Gemini 2.5",
  "homepage": "https://github.com/pot-app/pot-app-translate-plugin-gemini",
  "needs": [
    { "key": "apiKey", "display": "API Key", "type": "input" },
    { "key": "model", "display": "模型", "type": "input", "default": "gemini-2.5-flash-lite" },
